pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'mohamadaj/bs-pmc-2024-team14-web:latest'
        REGISTRY = 'docker.io'
        REGISTRY_CREDENTIALS = 'docker-hub-credentials'  // Jenkins credentials ID for Docker Hub
        DOCKERFILE_PATH = 'dockerfile'  // Path to your Dockerfile within the project
        BUILD_CONTEXT = '.'  // Build context is the root of your project
    }

    stages {
        stage('Clean Up Old Docker Images') {
            steps {
                script {
                    // Clean up old Docker images
                    sh 'docker rmi -f $(docker images -f "dangling=true" -q) || true'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build Docker image for linux/amd64 platform
                    sh 'docker buildx build --platform linux/amd64 -t $DOCKER_IMAGE -f $DOCKERFILE_PATH $BUILD_CONTEXT --load'
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    // Run Django tests inside the Docker container with specified platform
                    sh 'docker run --rm --platform linux/amd64 $DOCKER_IMAGE python CodeForU/manage.py test'
                }
            }
        }

        stage('Clean Up Docker Containers') {
            steps {
                script {
                    // Clean up Docker containers
                    sh 'docker container prune -f'
                }
            }
        }
    }

    post {
        always {
            script {
                // Clean up Docker images after the pipeline run
                sh 'docker rmi -f $DOCKER_IMAGE || true'
            }
        }
    }
}
