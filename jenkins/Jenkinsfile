pipeline {
    agent any

    stages {
        stage('Pull Docker Images') {
            steps {
                script {
                    // Pull the pre-built Docker images
                    sh 'docker pull bs-pmc-2024-team14-web:latest'
                    sh 'docker pull mongo:latest'
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    // Run tests using the pulled Docker image for web
                    sh 'docker run --rm bs-pmc-2024-team14-web:latest python CodeForU/manage.py test'
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Deploy the application using Docker Compose
                    sh 'docker-compose -f docker-compose.yml up -d'
                }
            }
        }
    }

    post {
        always {
            script {
                // Cleanup any dangling images
                sh 'docker image prune -f'
            }
        }
    }
}
